@model IEnumerable<ProspectScouting.Models.ScoutModels.ScoutListItem>


@{
    ViewBag.Title = "Index";
}

<link href="@Url.Content("~/Content/Site.css")" rel="stylesheet" type="text/css"/> 

<h2>Scouts</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>

@if (TempData.ContainsKey("SaveResult"))
{
    <div class="alert alert-success fade in" role="alert">
        <button type="button" class="close" data-dismiss="alert">
            <span>&times;</span>
        </button>
        @TempData["SaveResult"]
    </div>
}

<table class="table">
    <tr>
        @*<th>
            @Html.DisplayNameFor(model => model.ScoutID)
        </th>*@
        @*<th>
            @Html.DisplayNameFor(model => model.FirstName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.LastName)
        </th>*@

        <th>
            @Html.ActionLink("First Name:", "Index", new { sortingOrder = ViewBag.SortingFirstName })
        </th>
        <th>
            @Html.ActionLink("Last Name:", "Index", new { sortingOrder = ViewBag.SortingLastName })
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            @*<td>
                @Html.DisplayFor(modelItem => item.ScoutID)
            </td>*@
            <td>
                @Html.DisplayFor(modelItem => item.FirstName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.LastName)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id=item.ScoutID }) |
                @Html.ActionLink("Details", "Details", new { id = item.ScoutID }) |
                @Html.ActionLink("Remove", "Delete", new { id = item.ScoutID })
            </td>
        </tr>
    }

</table>
